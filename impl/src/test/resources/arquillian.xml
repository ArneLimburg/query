<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0" />

    <engine>
        <property name="deploymentExportPath">target</property>
    </engine>
    
    <container qualifier="glassfish-31-embedded">
        <configuration>
            <property name="sunResourcesXml">src/test/resources-glassfish/glassfish-resources.xml</property>
        </configuration>
    </container>
    
    <container qualifier="glassfish-31-managed" default="${default.glassfish}">
        <configuration>
            <property name="glassFishHome">target/glassfish3</property>
            <property name="allowConnectingToRunningServer">true</property>
            <property name="outputToConsole">true</property>
            <property name="sunResourcesXml">src/test/resources-glassfish/glassfish-resources.xml</property>
        </configuration>
    </container>
    
    <container qualifier="jbossas-7-managed" default="${default.jboss}">
        <configuration>
            <property name="jbossHome">target/jboss-as-7.1.1.Final</property>
        </configuration>
    </container>

</arquillian>
